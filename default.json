{
  "extends": [
    "config:js-app",
    ":automergeBranch",
    ":automergeLinters",
    ":automergeTypes",
    ":semanticCommits"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/vueuse/vueuse"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ],
      "groupName": "vueuse monorepo"
    }
  ]
}
